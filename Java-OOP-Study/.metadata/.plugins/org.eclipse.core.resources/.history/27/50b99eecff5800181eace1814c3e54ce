package com.study.my;

class MyString {

	char[] value;

	public MyString(char[] value) {
		this.value = value; // 通过构造方法将字符传入
	}

	public boolean equalsString(Object obj) {

		if (this == obj)
			return true; // 若是自身
		if (!(obj instanceof MyString))
			return false; // 若类型不同

		MyString string = (MyString) obj;
		int n = this.value.length;

		if (n != string.value.length)
			return false;// 先判断长度的关系
		char v1[] = this.value;
		char v2[] = string.value;
		int i = 0;
		while (n-- != 0) { // 按照数组的每一位进行比较
			if (v1[i] > v2[i]) {
				return false;
			} else if (v1[i] < v2[i]) {
				return false;
			}

			i++;
		}
		return true; // 若while循环正常结束，则说明相等，返回0

	}

}
